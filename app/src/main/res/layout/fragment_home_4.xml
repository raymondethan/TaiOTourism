<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:paddingLeft="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Tai O Guide"
                    android:color="#fff"
                    android:id="@+id/textView5"
                    android:textColor="#fff"
                    android:textSize="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="By YCMA"
                    android:id="@+id/textView6"
                    android:textColor="#BEFFFFFF" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="#e9e9e9"
            android:orientation="horizontal">

            <GridLayout
                tools:context=".GridLayoutActivity"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="2"
                android:orientation="horizontal"
                android:columnCount="1"
                android:background="@drawable/home_bg_8"
                android:paddingTop="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <Button
                    android:text="Map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="#fff"
                    android:paddingLeft="40dp"
                    android:drawableLeft="@android:drawable/ic_menu_mapmode"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical|left"
                    android:layout_marginBottom="10dp" />
                <Button
                    android:text="Take the tour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="#fff"
                    android:paddingLeft="40dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical|left"
                    android:drawableLeft="@android:drawable/ic_menu_directions"
                    android:layout_marginBottom="10dp" />
                <Button
                    android:text="Transport Information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="#fff"
                    android:paddingLeft="40dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical|left"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:layout_marginBottom="10dp" />
                <Button
                    android:text="About YCMA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="#fff"
                    android:paddingLeft="40dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical|left"
                    android:drawableLeft="@android:drawable/ic_menu_search" />
            </GridLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_map_black_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right|end"
        />

</android.support.design.widget.CoordinatorLayout>